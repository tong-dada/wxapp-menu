@import '../../wxParse/wxParse.wxss';
/* 富文本  */
.wxParse{
  margin: 0;

}
.wxParse image{
  float: left;
}
page{  
  display: flex;  
  flex-direction: column;  
  height: 100%;  
} 
 /* 视频固定模块  */
.detail{  
  flex: auto;  
  display: flex;  
  flex-direction: column;  
  background: #fff;  
} 
.detailtop{
  margin: 0;
  padding:0; 
}
.detailtop video{
  width: 750rpx;
  height:422rpx;
}
.detailtop .control{
  padding: 0 50rpx;
  margin-top: -10rpx;
  background: #f5f5f5;
  color: #666;
  font-size: 28rpx;
  line-height: 70rpx;
}
.detailtop .control button{
  padding:0;
  line-height: normal;
  background: none;
  border: none;
  float: right;
  color: #666;
  margin-top: 16rpx;
  
}
.detailtop .control button i{
  text-align: right;
}
.detailtop .control button::after{
  position: static;
  content: none;
}
.detailtop i{
  display: inline-block;
  font-size: 36rpx;
  vertical-align: middle;
  margin:-6rpx  0 0; 
  width: 80rpx;
  text-align: right;
}
.detailtop i:nth-child(1){
  width: 46rpx;
  text-align: center;
  margin-right: 10rpx;
}
.detailtop i:nth-child(2){
  margin-left: 50rpx;
}
.detailtop i:nth-child(3){
  float: right;
  margin-top: 0
}
/* 下边可滚动区域  */
.detailscroll{
  flex: auto;  
  position: relative;  
}
.detailscroll scroll-view{  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  top: 0;  
  background: #f0f0f0;
}  
.detailscroll .title{
  padding: 60rpx ;
  text-align: center;
  background: #fff;
}
.detailscroll .des{
  padding:0 50rpx 60rpx 50rpx;
  line-height:30rpx; 
  font-size: 24rpx;
  background: #fff;
}
.detailscroll .scrollinfo{
  margin: 10rpx 0;
  padding: 0 50rpx 0 40rpx;
  background: #fff;
  
}

.detailscroll .eatsay{
  float: left;
  font-size: 114rpx;
  color: #ff671b;
}
.detailscroll swiper{
  float: left;
  height: 114rpx;
  width: 546rpx;
}
.detailscroll swiper-item{
  padding-left:10rpx; 
}
.detailscroll swiper-item view{
  height: 62rpx;
  line-height: 62rpx;
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;

}
.detailscroll swiper-item view icon{
  color: #f3990f;
  margin-right: 10rpx;
  vertical-align: middle;
}

/*编辑器  */
.detailscroll .edit{
  width: 750rpx;
}
.detailscroll .edit rich-text{
  width: 100%;
}
.detailscroll .edit img{
  width: 100%;
}
.detailscroll .edit image{
  width: 100%;
  height: auto;
}
/*step  */
.detailscroll .step{
  margin-top: 10rpx;
  background: #fff;
  
}
.detailscroll .step .steptitle{
  text-align: center;
  padding: 46rpx 0 38rpx 0;
}
.detailscroll .step image{
  width: 100%;
}
.detailscroll .stepdes{
  padding: 40rpx 40rpx;
}
.detailscroll .stepdes .stepdestitle{
  margin-bottom: 38rpx;
}
.detailscroll .stepitem {
  margin-top: 40rpx;
}
.detailscroll .stepitem .tipsnum{
    display: inline-block;
    width:50rpx;
    height: 50rpx; 
    font-size:24rpx;
    border-radius: 100%;
    background: #d8d8d8;
    color:#fff;
    text-align: center;
    line-height: 50rpx; 
    float: left;
    margin-right:50rpx; 
}   
.detailscroll .stepitem .tipsdes {
     float: left;
     width: 570rpx;
     font-size: 24rpx;
     line-height: 48rpx;
     
}
.detailscroll .stepitem image{
    width: 570rpx;
    margin: 30rpx 0 0 100rpx;
}
