
page{  
  display: flex;  
  flex-direction: column;  
  height: 100%; 
  
}  
.search{  
  flex: auto;  
  display: flex;  
  flex-direction: column;  
  background: #fff;  
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.result-list:nth-child(1){
  margin-top: 20rpx;
}
.result-list{
  padding:0 30rpx 20rpx;
}   
/*搜索结果*/  
.search-result{  
  flex: auto;  
  position: relative;  
}  
.search-result scroll-view{  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  top: 0;  
  background: #f0f0f0; 
}  
.result-item{  
  position: relative;  
  display: flex;  
  flex-direction: column;  
  /* margin:0 30rpx 20rpx;   */
  overflow: hidden;  
  border-bottom: 2rpx solid #e5e5e5;  
}  
.result-item image{
  height:388rpx ;
  width: 690rpx;
}
.result-item i{
  position: absolute;
  font-size: 200rpx;
  color: #fff;
  margin-left: 255rpx;
  margin-top: 80rpx;
}
.result-des{
  position: relative;
  background: #fff;
  padding-bottom:30rpx; 
}
.result-name{
  font-size: 32rpx;
  margin:20rpx 30rpx 40rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #333;
}
.result-left{
  margin-left:30rpx;
  font-size: 24rpx;
  color: #666; 
}
.result-right{
  padding: 10rpx 16rpx;
  background:#ff671b ;
  color: #fff;
  font-size: 28rpx;
  border-radius: 10rpx;
  position: absolute;
  right: 30rpx;
  bottom:30rpx ;
}
.loading{  
  padding: 10rpx;  
  text-align: center; 
  font-size: 32rpx; 
}  
.loading:before{  
  display: inline-block;  
  margin-right: 5rpx;  
  vertical-align: middle;  
  content: '';  
  width: 40rpx;  
  height: 40rpx;  
  background: url(http://t.h5.air-cooking.com/Public/Web/img/loading.gif) no-repeat;  
  background-size: contain;  
  animation: rotate 1s linear infinite;  
}  
.loading.complete:before{  
  display: none;  
}  